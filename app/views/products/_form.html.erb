<%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- # Name -->
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <!-- # Price -->
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <!-- # Imported -->
  <div class="form-group">
    <%= f.label :imported, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :imported, class: "form-control" %>
    </div>
  </div>

  <!-- # Category_id -->
  <div class="form-group">
    <%= f.label :category_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Category <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <%= content_tag_for(:ol, @category, :menu ) do |cat| %>
                  <a href="#" onclick='getId();'> <%= cat.cat_name %></a>
              <% end %>
            </ul>
        </div><!-- /btn-group -->
        <%= f.text_field :category_id, class: "form-control" %>
      </div><!-- /input-group -->
    </div>
  </div>

  <!-- # Quantity -->
  <div class="form-group">
    <%= f.label :qnty, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qnty, in: 0..9000, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
