<div class="page-header">
  <%= link_to categories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_category_path(@category), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show category</h1>
</div>

<dl class="dl-horizontal">
  <dt>Cat name:</dt>
  <dd><%= @category.cat_name %></dd>

  <dt>Tax fee:</dt>
  <dd><%= @category.tax_fee %></dd>

  <dt>Fee free:</dt>
  <dd><%= @category.fee_free %></dd>

</dl>
